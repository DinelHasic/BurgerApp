@model OrderInfoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Order</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="OrderId"  class="control-label"></label>
                <input asp-for="OrderId" class="form-control" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <br/>
             <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users, "UserId", "UserFullName"))" class="form-control"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            </br>
            <div class="form-group">
                <label asp-for="BurgersId" class="control-label"></label>
            </br>
            <div title="Pres ctrl + left click to select multiple" class="selectBurger">
                @Html.ListBoxFor(x => x.BurgersId, new SelectList(ViewBag.Burgers, "BurgerId", "BurgerName"))
                <span asp-validation-for="BurgersId" class="text-danger"></span>
            </div>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="OrderPrice" class="control-label"></label>
                <input asp-for="OrderPrice" class="form-control" disabled/>
                <span asp-validation-for="OrderPrice" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="DateOrder" class="control-label"></label>
                <input asp-for="DateOrder" class="form-control" />
                <span asp-validation-for="DateOrder" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
