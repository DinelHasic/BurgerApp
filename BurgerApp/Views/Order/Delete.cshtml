@model OrderViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete order?</h3>
<div>
    <form asp-action="Delete" asp-controller="Order" method="post"> 
        <input type="submit" value="Yes" class="btn btn-danger" />
        <button class="btn btn-primary"><a style="color:white;text-decoration:none" asp-action="Index">No</a></button> 
    </form>
</div>
