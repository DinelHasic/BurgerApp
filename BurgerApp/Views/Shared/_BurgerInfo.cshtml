@model BurgerApp.Contracts.ViewModels.Burger.BurgerListViewModel
@*
	For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="item-container">
		<a asp-controller="Burger" asp-action="Detail" asp-route-id="@Model.BurgerId"><img class="card-img-top img-fluid"  style=" height:17em;  width:100%;" src=@Model.BurgerURL  alt="@Model.BurgerName"></a>
		<div class="card-body">
			<h5 class="card-title" style="text-align:center">@Model.BurgerName</h5>
		</div>
		<a asp-controller="Burger" asp-action="Edit" asp-route-id=@Model.BurgerId><button style="margin:0% 20%" type="button" class="btn btn-outline-primary">Edit</button></a>
		<a asp-controller="Burger" asp-action="Delete" asp-route-id=@Model.BurgerId><button type="button" class="btn btn-outline-primary">Delete</button></a>
		<br/>
		<br/>
</div>

